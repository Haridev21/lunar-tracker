{
  "version": 2,
  "builds": [
    { "src": "api/weather.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/weather.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
